<!-- Este codigo despliega la pagina de Inicio de sesion, la ruta de esta pagina es /sigin-->


<%- layout('layouts/main.ejs')%>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>
                    Inicio Sesion
                </h3>
            </div>
            <div class="card-body">
                <form action="/signin" method="post">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Ingrese el Email" class="form-control">
                    </div>        
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Ingrese su contraseña" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-4">
                        Iniciar Sesión
                    </button>             
                </form>
            </div>
        </div>
    </div>
</div>
